<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Public/css/default.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Public/css/default_headings.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Public/css/notify.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Public/js/jquery/jquery-1.6.2.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery/jquery-ui-1.8.21.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/jquery/jquery.notify.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Public/js/modernizr/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
</head>

<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    @ViewBag.Title  
                </p>
            </div>
            <div class="float-right">
                <section id="login">
                    &nbsp;
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Comments", "Index", "Comments")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Sample ASP.NET MVC 3.0 Application</p>
            </div>
        </div>
    </footer>
</body>
</html>